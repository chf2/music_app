<h2>All Bands</h2>
<% if logged_in? %>
  <h2>Hello <%= current_user.email %></h2>
<% end %>

<% unless @bands.empty? %>
  <ul>
    <% @bands.each do |band| %>
      <li><%= link_to band.name, band_url(band) %> 
              (<%= band.albums.length %> albums) </li>
    <% end %> 
  </ul>
<% end %>

<%= link_to "Add New Band", new_band_url %>
