<% action_url = @band.persisted? ? band_url(@band) : bands_url %>
<% use_method = @band.persisted? ? "PATCH" : "POST" %>
<% submit_text = @band.persisted? ? "Update Band" : "Create Band" %>

<form action="<%= action_url %>" method="POST">
  <%= rails_auth_token %>
  <input type="hidden" name="_method" value="<%= use_method %>"

  <label>Band Name:
    <input type="text"
           name="band[name]"
           value="<%= @band.name %>">
  </label>
  <br>
  <input type="submit" value="<%= submit_text %>">
</form>
