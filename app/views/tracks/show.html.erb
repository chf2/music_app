<h2><%= @track.name %></h2>
<p>
  <h3>Lyrics:</h3> 
  <%= ugly_lyrics(@track.lyrics) %>
</p>

<% unless @notes.empty? %>
  <h3>Notes on this track:</h3>
  <%= render @notes %>
<% end %>
<%= render 'notes/form', track_id: @track.id %>

<p>
  From the album <%= link_to @track.album.name, album_url(@track.album_id) %>.
</p>
<% if current_user.admin %>
  <%= link_to "Edit Track", edit_track_url(@track) %>
<% end %>